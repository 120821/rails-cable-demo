<!-- 右侧区域，显示博客列表 -->
<!-- 使用这个 div 来放博客内容 -->
<div class="blog-content">
  <%= link_to raw('编辑&gt;&gt;'), edit_blog_path(@blog), class: 'detail1'%>
  <!-- 博客的标题 -->
  <h3>
    <%= @blog.title %>
  </h3>
  <!-- 博客的日期 -->
  <div class="date">
    <%= @blog.created_at.to_s(:db) %>
  </div>
  <!-- 博客的内容 -->
  <div class="detail-content">
    <%= raw(@blog.content) %>
  </div>
  <%= link_to raw('&lt;&lt;返回'), blogs_path, class: 'detail1'%>
</div>
</div>
