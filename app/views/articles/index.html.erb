<p id="notice"><%= notice %></p>

<h1>列表</h1>
文章总数 <%= @total_count %>
<%= paginate @articals %>

<%= form_tag '', method: :get do %>
  题目: <%= text_field_tag :artical_title, params[:artical_title] %>
  内容: <%= text_field_tag :artical_content, params[:artical_content] %>
  <%= submit_tag nil, class: "form_submit" %>
<% end %>
 <%= link_to '新建', new_artical_path %>
<table class='table table-striped table-hover table-border'>
  <thead>
    <tr>
      <th>标题</th>
      <th>内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articals.each do |artical| %>
      <tr>
        <td><%= artical.titile %></td>
        <td>
          <%= artical.content %>
        </td>
        <td><%= link_to '详情', artical %></td>
        <td><%= link_to '编辑', edit_artical_path(artical) %></td>
        <td><%= link_to '删除', artical, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

